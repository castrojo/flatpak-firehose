---
interface Release {
  version: string;
  date: string;
  title: string;
  description?: string;
  url?: string;
  type: string;
  app: {
    id: string;
    name: string;
    icon?: string;
    packageType: string;
    summary: string;
    flathubUrl?: string;
    sourceRepo?: {
      type: string;
      url: string;
      owner?: string;
      repo?: string;
    };
    homebrewInfo?: {
      formula: string;
      homepage?: string;
    };
  };
}

interface Props {
  release: Release;
}

const { release } = Astro.props;

// Get package URL based on type
function getPackageUrl(app: Release['app']): string {
  if (app.packageType === 'os' && app.sourceRepo?.url) {
    return app.flathubUrl || app.sourceRepo.url;
  }
  if (app.packageType === 'homebrew' && app.homebrewInfo?.homepage) {
    return app.homebrewInfo.homepage;
  }
  if (app.packageType === 'homebrew') {
    return `https://formulae.brew.sh/formula/${app.homebrewInfo?.formula}`;
  }
  return app.flathubUrl || '#';
}

// Get package type display name
function getPackageTypeName(type: string): string {
  if (type === 'homebrew') return 'Homebrew';
  if (type === 'os') return 'OS Release';
  return 'Flatpak';
}

// Format version display (OS releases don't need 'v' prefix)
function formatVersion(version: string, packageType: string): string {
  if (packageType === 'os') {
    return version; // OS releases like "stable-20260203" already have a prefix
  }
  return `v${version}`; // Other packages get "v1.2.3" format
}
---

<article class="release-card" data-package-type={release.app.packageType}>
  <div class="release-header">
    {release.app.icon && (
      <img src={release.app.icon} alt={`${release.app.name} icon`} class="release-icon" />
    )}
    {!release.app.icon && release.app.packageType === 'homebrew' && (
      <div class="release-icon homebrew-icon">üç∫</div>
    )}
    {!release.app.icon && release.app.packageType === 'os' && (
      <div class="release-icon os-icon">üêß</div>
    )}
    <div class="release-title-section">
      <div class="release-name-row">
        <h3 class="release-name">
          <a href={getPackageUrl(release.app)} target="_blank" rel="noopener">
            {release.app.name}
            <span class="version-inline">{formatVersion(release.version, release.app.packageType)}</span>
          </a>
        </h3>
        <span class={`package-type-badge ${release.app.packageType}`}>
          {getPackageTypeName(release.app.packageType)}
        </span>
      </div>
      <p class="release-app-id">{release.app.id}</p>
    </div>
  </div>

  <p class="release-summary">{release.app.summary}</p>

  {release.app.sourceRepo && (
    <div class="source-repo">
      <span class="repo-icon">
        {release.app.sourceRepo.type === 'github' ? '‚öô' : 'üåê'}
      </span>
      <a href={release.app.sourceRepo.url} target="_blank" rel="noopener" class="repo-link">
        {release.app.sourceRepo.type === 'github' 
          ? `${release.app.sourceRepo.owner}/${release.app.sourceRepo.repo}`
          : 'Source Repository'
        }
      </a>
    </div>
  )}

  {release.description && (
    <div class="release-notes">
      <div class="release-description" set:html={release.description} />
      {release.url && (
        <a href={release.url} target="_blank" rel="noopener" class="release-link">
          View Full Release ‚Üí
        </a>
      )}
    </div>
  )}
</article>

