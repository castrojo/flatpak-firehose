---
interface Release {
  version: string;
  date: string;
  title: string;
  description?: string;
  url?: string;
  type: string;
  app: {
    id: string;
    name: string;
    icon?: string;
    packageType: string;
    summary: string;
    flathubUrl?: string;
    sourceRepo?: {
      type: string;
      url: string;
      owner?: string;
      repo?: string;
    };
    homebrewInfo?: {
      formula: string;
      homepage?: string;
    };
    osInfo?: {
      stream: string;
      fedoraVersion: string;
      buildNumber: string;
      commitHash?: string;
      imageName?: string;
      kernelVersion?: string;
      gnomeVersion?: string;
      mesaVersion?: string;
      majorPackages?: Record<string, string>;
    };
  };
}

interface Props {
  release: Release;
}

const { release } = Astro.props;

// Get package URL based on type
function getPackageUrl(app: Release['app']): string {
  if (app.packageType === 'os' && app.sourceRepo?.url) {
    return app.flathubUrl || app.sourceRepo.url;
  }
  if (app.packageType === 'homebrew' && app.homebrewInfo?.homepage) {
    return app.homebrewInfo.homepage;
  }
  if (app.packageType === 'homebrew') {
    return `https://formulae.brew.sh/formula/${app.homebrewInfo?.formula}`;
  }
  return app.flathubUrl || '#';
}

// Get package type display name
function getPackageTypeName(type: string): string {
  if (type === 'homebrew') return 'Homebrew';
  if (type === 'os') return 'OS Release';
  return 'Flathub';
}

// Format version display (no 'v' prefix for any package type)
function formatVersion(version: string, packageType: string): string {
  return version;
}

// Format date for display
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
  
  if (diffDays === 0) return 'Today';
  if (diffDays === 1) return 'Yesterday';
  if (diffDays < 7) return `${diffDays} days ago`;
  if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
  if (diffDays < 365) return `${Math.floor(diffDays / 30)} months ago`;
  return `${Math.floor(diffDays / 365)} years ago`;
}
---

<article class="release-card" data-package-type={release.app.packageType}>
  <div class="release-header">
    {release.app.icon && (
      <img src={release.app.icon} alt={`${release.app.name} icon`} class="release-icon" />
    )}
    {!release.app.icon && release.app.packageType === 'homebrew' && (
      <div class="release-icon homebrew-icon">üç∫</div>
    )}
    {!release.app.icon && release.app.packageType === 'os' && (
      <div class="release-icon os-icon">üêß</div>
    )}
    <div class="release-title-section">
      <div class="release-name-row">
        <h3 class="release-name">
          <a href={getPackageUrl(release.app)} target="_blank" rel="noopener">
            {release.app.name}
            <span class="version-inline">{formatVersion(release.version, release.app.packageType)}</span>
          </a>
        </h3>
        <div class="release-meta">
          <span class="release-date">{formatDate(release.date)}</span>
          <div class="meta-badges">
            <span class={`package-type-badge ${release.app.packageType}`}>
              {getPackageTypeName(release.app.packageType)}
            </span>
            {release.app.packageType === 'flatpak' && release.app.flathubUrl && (
              <a 
                href={`https://flathub.org/apps/${release.app.id}`} 
                target="_blank" 
                rel="noopener"
                class="flathub-icon-link"
                title="Install from Flathub"
              >
                <i class="fas fa-download"></i>
              </a>
            )}
            {release.app.sourceRepo && (
              <a 
                href={release.app.sourceRepo.url} 
                target="_blank" 
                rel="noopener" 
                class="source-icon-link"
                title={release.app.sourceRepo.type === 'github' 
                  ? `${release.app.sourceRepo.owner}/${release.app.sourceRepo.repo}` 
                  : release.app.sourceRepo.type === 'gitlab'
                  ? 'GitLab Repository'
                  : 'Source Repository'}
              >
                {release.app.sourceRepo.type === 'github' && <i class="fab fa-github"></i>}
                {release.app.sourceRepo.type === 'gitlab' && <i class="fab fa-gitlab"></i>}
                {release.app.sourceRepo.type !== 'github' && release.app.sourceRepo.type !== 'gitlab' && <i class="fas fa-code-branch"></i>}
              </a>
            )}
          </div>
        </div>
      </div>
      {release.app.packageType === 'homebrew' && release.app.homebrewInfo?.formula ? (
        <div class="brew-install-row">
          <code class="brew-command">brew install {release.app.homebrewInfo.formula}</code>
          <button 
            class="copy-button" 
            data-command={`brew install ${release.app.homebrewInfo.formula}`}
            aria-label="Copy brew install command"
          >
            <i class="fas fa-copy"></i>
          </button>
        </div>
      ) : release.app.packageType === 'os' && release.app.osInfo?.imageName ? (
        <p class="release-app-id">{release.app.osInfo.imageName}</p>
      ) : (
        <p class="release-app-id">{release.app.id}</p>
      )}
    </div>
  </div>

  <p class="release-summary">{release.app.summary}</p>

  {release.description && (
    <div class="release-notes">
      <div class="release-description" set:html={release.description} />
      {(release.url || release.app.sourceRepo) && (
        <a 
          href={release.url || `${release.app.sourceRepo.url}/releases`} 
          target="_blank" 
          rel="noopener" 
          class="release-link"
        >
          View Full Release ‚Üí
        </a>
      )}
    </div>
  )}
</article>

