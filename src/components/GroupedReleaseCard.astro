  .release-description :global(ol) {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  .release-description :global(li) {
    margin: 0.25rem 0;
  }

  .release-link {
    color: var(--color-text-link);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .release-link:hover {
    text-decoration: underline;
  }

  /* Older Releases Section */
  .older-releases-section {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-default);
  }

  .older-releases-toggle {
    background: transparent;
    border: none;
    color: var(--color-text-link);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s;
    width: 100%;
  }

  .older-releases-toggle:hover {
    color: var(--color-accent-emphasis);
  }

  .toggle-icon {
    font-size: 0.75rem;
    transition: transform 0.2s;
  }

  .older-releases-toggle[aria-expanded="true"] .toggle-icon {
    transform: rotate(90deg);
  }

  .older-releases-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .older-releases-list[hidden] {
    display: none;
  }

  .older-release-item {
    padding: 0.75rem;
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border-default);
    border-radius: 4px;
  }

  .older-release-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .older-release-version {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .older-release-date {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .older-release-description {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  .older-release-description :global(p) {
    margin: 0 0 0.25rem 0;
  }

  .older-release-description :global(ul),
  .older-release-description :global(ol) {
    margin: 0.25rem 0;
    padding-left: 1.25rem;
  }

  .older-release-description :global(li) {
    margin: 0.125rem 0;
  }

  .older-release-link {
    color: var(--color-text-link);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .older-release-link:hover {
    text-decoration: underline;
  }
</style>

