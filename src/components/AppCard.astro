---
interface AppProps {
  id: string;
  name: string;
  summary: string;
  developerName?: string;
  icon?: string;
  projectLicense?: string;
  categories?: string[];
  updatedAt?: string;
  currentReleaseVersion?: string;
  currentReleaseDate?: string;
  flathubUrl?: string;
  installsLastMonth?: number;
  favoritesCount?: number;
  isVerified?: boolean;
  verificationInfo?: {
    method: string;
    loginName?: string;
    loginProvider?: string;
    website?: string;
  };
  sourceRepo?: {
    type: string;
    url: string;
    owner?: string;
    repo?: string;
  };
  releases?: Array<{
    version: string;
    date: string;
    title: string;
    description?: string;
    url?: string;
    type: string;
  }>;
  appSet?: string;
  packageType: string;
  homebrewInfo?: {
    formula: string;
    fullName?: string;
    tap?: string;
    homepage?: string;
    versions?: string[];
    dependencies?: string[];
    caveats?: string;
  };
  osInfo?: {
    stream: string;
    fedoraVersion: string;
    buildNumber: string;
    commitHash?: string;
    kernelVersion?: string;
    gnomeVersion?: string;
    mesaVersion?: string;
    majorPackages?: Record<string, string>;
  };
}

interface Props {
  app: AppProps;
}

const { app } = Astro.props;

// Format date for display
function formatDate(dateStr: string) {
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'short', 
      day: 'numeric' 
    });
  } catch {
    return dateStr;
  }
}

// Get package URL based on type
function getPackageUrl(app: AppProps): string {
  if (app.packageType === 'os' && app.sourceRepo?.url) {
    // For OS releases, link to the latest release on GitHub
    return app.flathubUrl || app.sourceRepo.url;
  }
  if (app.packageType === 'homebrew' && app.homebrewInfo?.homepage) {
    return app.homebrewInfo.homepage;
  }
  if (app.packageType === 'homebrew') {
    return `https://formulae.brew.sh/formula/${app.homebrewInfo?.formula}`;
  }
  return app.flathubUrl || '#';
}

// Get package type display name
function getPackageTypeName(type: string): string {
  if (type === 'homebrew') return 'Homebrew';
  if (type === 'os') return 'OS Release';
  return 'Flathub';
}
---

<article 
  class="app-card" 
  data-verified={app.isVerified ? 'true' : 'false'}
  data-categories={app.categories?.join(',') || ''}
  data-updated-at={app.updatedAt || ''}
  data-app-set={app.appSet || ''}
  data-package-type={app.packageType}
>
  <div class="app-header">
    {app.icon && (
      <img src={app.icon} alt={`${app.name} icon`} class="app-icon" />
    )}
    {!app.icon && app.packageType === 'homebrew' && (
      <div class="app-icon homebrew-icon">üç∫</div>
    )}
    {!app.icon && app.packageType === 'os' && (
      <div class="app-icon os-icon">üêß</div>
    )}
    <div class="app-title-section">
      <div class="app-name-row">
        <h2 class="app-name">
          <a href={getPackageUrl(app)} target="_blank" rel="noopener">
            {app.name}
            {app.currentReleaseVersion && (
              <span class="version-inline">{app.currentReleaseVersion}</span>
            )}
          </a>
          {app.isVerified && (
            <span class="verified-badge" title={`Verified via ${app.verificationInfo?.method}`}>
              ‚úì
            </span>
          )}
        </h2>
        {(app.currentReleaseDate || (app.releases && app.releases.length > 0 && app.releases[0].date)) && (
          <span class="release-date">
            {formatDate(app.currentReleaseDate || app.releases[0].date)}
          </span>
        )}
      </div>
      <div class="app-id-row">
        <p class="app-id">{app.id}</p>
        <span class={`package-type-badge ${app.packageType}`}>
          {getPackageTypeName(app.packageType)}
        </span>
      </div>
    </div>
  </div>

  <p class="app-summary">{app.summary}</p>

  <div class="app-meta">
    {app.packageType === 'flatpak' && app.developerName && (
      <div class="meta-item">
        <span class="meta-label">Developer:</span>
        <span class="meta-value">{app.developerName}</span>
      </div>
    )}
    {app.packageType === 'homebrew' && app.homebrewInfo?.tap && (
      <div class="meta-item">
        <span class="meta-label">Tap:</span>
        <span class="meta-value">{app.homebrewInfo.tap}</span>
      </div>
    )}
    {app.packageType === 'os' && app.osInfo && (
      <>
        <div class="meta-item">
          <span class="meta-label">Stream:</span>
          <span class="meta-value">{app.osInfo.stream.toUpperCase()}</span>
        </div>
        {app.osInfo.fedoraVersion && (
          <div class="meta-item">
            <span class="meta-label">Fedora:</span>
            <span class="meta-value">F{app.osInfo.fedoraVersion}</span>
          </div>
        )}
        {app.osInfo.kernelVersion && (
          <div class="meta-item">
            <span class="meta-label">Kernel:</span>
            <span class="meta-value">{app.osInfo.kernelVersion}</span>
          </div>
        )}
        {app.osInfo.gnomeVersion && (
          <div class="meta-item">
            <span class="meta-label">GNOME:</span>
            <span class="meta-value">{app.osInfo.gnomeVersion}</span>
          </div>
        )}
      </>
    )}
    {app.installsLastMonth !== undefined && app.installsLastMonth > 0 && (
      <div class="meta-item">
        <span class="meta-label">Installs (30d):</span>
        <span class="meta-value">{app.installsLastMonth.toLocaleString()}</span>
      </div>
    )}
    {app.favoritesCount !== undefined && app.favoritesCount > 0 && (
      <div class="meta-item">
        <span class="meta-label">Favorites:</span>
        <span class="meta-value">‚≠ê {app.favoritesCount}</span>
      </div>
    )}
  </div>

  {app.categories && app.categories.length > 0 && (
    <div class="app-categories">
      {app.categories.slice(0, 3).map((cat: string) => (
        <span class="category-tag">{cat}</span>
      ))}
    </div>
  )}

  {app.sourceRepo && (
    <a href={app.sourceRepo.url} target="_blank" rel="noopener" class="source-repo-icon" title={app.sourceRepo.type === 'github' ? `${app.sourceRepo.owner}/${app.sourceRepo.repo}` : 'Source Repository'}>
      {app.sourceRepo.type === 'github' && <i class="fab fa-github"></i>}
      {app.sourceRepo.type === 'gitlab' && <i class="fab fa-gitlab"></i>}
      {app.sourceRepo.type !== 'github' && app.sourceRepo.type !== 'gitlab' && <i class="fas fa-code-branch"></i>}
    </a>
  )}

  {app.releases && app.releases.length > 0 && app.releases[0].description && (
    <div class="changelog-section">
      <h3 class="changelog-header">Latest Release</h3>
      <div class="changelog-description" set:html={app.releases[0].description} />
      {(app.releases[0].url || app.sourceRepo) && (
        <a 
          href={app.releases[0].url || `${app.sourceRepo.url}/releases`} 
          target="_blank" 
          rel="noopener" 
          class="changelog-link"
        >
          View Full Release ‚Üí
        </a>
      )}
      {app.releases.length > 1 && app.sourceRepo && (
        <a 
          href={`${app.sourceRepo.url}/releases`} 
          target="_blank" 
          rel="noopener" 
          class="view-all-releases"
        >
          View all {app.releases.length} releases ‚Üí
        </a>
      )}
    </div>
  )}
</article>

