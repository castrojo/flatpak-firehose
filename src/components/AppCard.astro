---
interface AppProps {
  id: string;
  name: string;
  summary: string;
  developerName?: string;
  icon?: string;
  projectLicense?: string;
  categories?: string[];
  updatedAt?: string;
  currentReleaseVersion?: string;
  currentReleaseDate?: string;
  flathubUrl?: string;
  installsLastMonth?: number;
  favoritesCount?: number;
  isVerified?: boolean;
  verificationInfo?: {
    method: string;
    loginName?: string;
    loginProvider?: string;
    website?: string;
  };
  sourceRepo?: {
    type: string;
    url: string;
    owner?: string;
    repo?: string;
  };
  releases?: Array<{
    version: string;
    date: string;
    title: string;
    description?: string;
    url?: string;
    type: string;
  }>;
  appSet?: string;
  packageType: string;
  homebrewInfo?: {
    formula: string;
    fullName?: string;
    tap?: string;
    homepage?: string;
    versions?: string[];
    dependencies?: string[];
    caveats?: string;
  };
}

interface Props {
  app: AppProps;
}

const { app } = Astro.props;

// Format date for display
function formatDate(dateStr: string) {
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'short', 
      day: 'numeric' 
    });
  } catch {
    return dateStr;
  }
}

// Get package URL based on type
function getPackageUrl(app: AppProps): string {
  if (app.packageType === 'homebrew' && app.homebrewInfo?.homepage) {
    return app.homebrewInfo.homepage;
  }
  if (app.packageType === 'homebrew') {
    return `https://formulae.brew.sh/formula/${app.homebrewInfo?.formula}`;
  }
  return app.flathubUrl || '#';
}

// Get package type display name
function getPackageTypeName(type: string): string {
  if (type === 'homebrew') return 'Homebrew';
  return 'Flatpak';
}
---

<article 
  class="app-card" 
  data-verified={app.isVerified ? 'true' : 'false'}
  data-categories={app.categories?.join(',') || ''}
  data-updated-at={app.updatedAt || ''}
  data-app-set={app.appSet || ''}
  data-package-type={app.packageType}
>
  <div class="app-header">
    {app.icon && (
      <img src={app.icon} alt={`${app.name} icon`} class="app-icon" />
    )}
    {!app.icon && app.packageType === 'homebrew' && (
      <div class="app-icon homebrew-icon">üç∫</div>
    )}
    <div class="app-title-section">
      <h2 class="app-name">
        <a href={getPackageUrl(app)} target="_blank" rel="noopener">
          {app.name}
        </a>
        {app.isVerified && (
          <span class="verified-badge" title={`Verified via ${app.verificationInfo?.method}`}>
            ‚úì
          </span>
        )}
      </h2>
      <div class="app-id-row">
        <p class="app-id">{app.id}</p>
        <span class={`package-type-badge ${app.packageType}`}>
          {getPackageTypeName(app.packageType)}
        </span>
      </div>
    </div>
  </div>

  <p class="app-summary">{app.summary}</p>

  <div class="app-meta">
    {app.packageType === 'flatpak' && app.developerName && (
      <div class="meta-item">
        <span class="meta-label">Developer:</span>
        <span class="meta-value">{app.developerName}</span>
      </div>
    )}
    {app.packageType === 'homebrew' && app.homebrewInfo?.tap && (
      <div class="meta-item">
        <span class="meta-label">Tap:</span>
        <span class="meta-value">{app.homebrewInfo.tap}</span>
      </div>
    )}
    {app.currentReleaseVersion && (
      <div class="meta-item">
        <span class="meta-label">Version:</span>
        <span class="meta-value">{app.currentReleaseVersion}</span>
      </div>
    )}
    {app.currentReleaseDate && (
      <div class="meta-item">
        <span class="meta-label">Released:</span>
        <span class="meta-value">{formatDate(app.currentReleaseDate)}</span>
      </div>
    )}
    {app.installsLastMonth !== undefined && app.installsLastMonth > 0 && (
      <div class="meta-item">
        <span class="meta-label">Installs (30d):</span>
        <span class="meta-value">{app.installsLastMonth.toLocaleString()}</span>
      </div>
    )}
    {app.favoritesCount !== undefined && app.favoritesCount > 0 && (
      <div class="meta-item">
        <span class="meta-label">Favorites:</span>
        <span class="meta-value">‚≠ê {app.favoritesCount}</span>
      </div>
    )}
  </div>

  {app.categories && app.categories.length > 0 && (
    <div class="app-categories">
      {app.categories.slice(0, 3).map((cat: string) => (
        <span class="category-tag">{cat}</span>
      ))}
    </div>
  )}

  {app.sourceRepo && (
    <div class="source-repo">
      <span class="repo-icon">
        {app.sourceRepo.type === 'github' ? 'üîó' : 'üåê'}
      </span>
      <a href={app.sourceRepo.url} target="_blank" rel="noopener" class="repo-link">
        {app.sourceRepo.type === 'github' 
          ? `${app.sourceRepo.owner}/${app.sourceRepo.repo}`
          : 'Source Repository'
        }
      </a>
    </div>
  )}

  {app.releases && app.releases.length > 0 && (
    <div class="changelog-section">
      <h3 class="changelog-header">Latest Releases</h3>
      <div class="changelog-list">
        {app.releases.slice(0, 3).map((release: any) => (
          <div class="changelog-entry">
            <div class="changelog-meta">
              <span class="changelog-version">{release.version}</span>
              <span class="changelog-date">{formatDate(release.date)}</span>
              {release.type === 'github-release' && (
                <span class="changelog-badge">GitHub</span>
              )}
            </div>
            <h4 class="changelog-title">{release.title}</h4>
            {release.description && release.description.length > 0 && (
              <p class="changelog-description">
                {release.description.length > 300 
                  ? release.description.substring(0, 300) + '...' 
                  : release.description
                }
              </p>
            )}
            {release.url && (
              <a href={release.url} target="_blank" rel="noopener" class="changelog-link">
                View Full Release ‚Üí
              </a>
            )}
          </div>
        ))}
      </div>
      {app.releases.length > 3 && app.sourceRepo && (
        <a 
          href={`${app.sourceRepo.url}/releases`} 
          target="_blank" 
          rel="noopener" 
          class="view-all-releases"
        >
          View all {app.releases.length} releases ‚Üí
        </a>
      )}
    </div>
  )}
</article>

