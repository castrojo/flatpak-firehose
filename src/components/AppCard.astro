    color: var(--color-text);
    text-decoration: none;
  }

  .app-name a:hover {
    color: var(--color-primary);
  }

  .app-id {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    margin: 0.25rem 0 0 0;
    font-family: monospace;
  }

  .app-summary {
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .app-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .meta-item {
    display: flex;
    gap: 0.5rem;
  }

  .meta-label {
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .meta-value {
    color: var(--color-text);
  }

  .app-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .category-tag {
    background: rgba(88, 166, 255, 0.1);
    color: var(--color-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    border: 1px solid rgba(88, 166, 255, 0.2);
  }

  .source-repo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: rgba(88, 166, 255, 0.05);
    border: 1px solid rgba(88, 166, 255, 0.2);
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .repo-icon {
    font-size: 1.25rem;
  }

  .repo-link {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-family: monospace;
  }

  .repo-link:hover {
    text-decoration: underline;
  }

  .changelog-section {
    border-top: 1px solid var(--color-border);
    padding-top: 1rem;
    margin-top: 1rem;
  }

  .changelog-header {
    cursor: pointer;
    font-weight: 600;
    color: var(--color-text);
    padding: 0.5rem;
    border-radius: 4px;
    transition: background 0.2s;
    user-select: none;
  }

  .changelog-header:hover {
    background: rgba(88, 166, 255, 0.1);
  }

  .changelog-list {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .changelog-entry {
    padding: 1rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    border: 1px solid var(--color-border);
  }

  .changelog-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .changelog-version {
    font-family: monospace;
    font-weight: 600;
    color: var(--color-primary);
  }

  .changelog-date {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .changelog-badge {
    background: var(--color-success);
    color: var(--color-bg);
    padding: 0.125rem 0.5rem;
    border-radius: 10px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .changelog-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--color-text);
  }

  .changelog-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0 0 0.5rem 0;
    line-height: 1.5;
  }

  .changelog-link {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.875rem;
    display: inline-block;
  }

  .changelog-link:hover {
    text-decoration: underline;
  }
</style>
